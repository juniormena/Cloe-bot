<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.junio.itlasiano.creadoresFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="19dp"
        android:text="Conoce a los desarrolladores"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="165sp"
        android:layout_height="200sp"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="38dp"
        app:srcCompat="@mipmap/ic_junior1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="165sp"
        android:layout_height="200sp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginEnd="25dp"
        app:srcCompat="@mipmap/ic_bryant" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:layout_marginEnd="31dp"
        android:text="Junior Mena"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView6"
        android:layout_below="@+id/imageView2"
        android:layout_marginEnd="17dp"
        android:text="Bryant Rijo"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Â©2018 Cloe" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@mipmap/ic_fb" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignTop="@+id/imageView3"
        android:layout_marginEnd="16dp"
        app:srcCompat="@mipmap/ic_ig" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toEndOf="@+id/textView4"
        app:srcCompat="@mipmap/ic_fb" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_alignTop="@+id/imageView5"
        android:layout_marginEnd="11dp"
        app:srcCompat="@mipmap/ic_ig" />
</RelativeLayout>


